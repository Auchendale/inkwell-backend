{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/users": {
    "description": "returns an array with all users",
    "example response": [
      {
        "_id": "673c75ec72ab525f841cafee",
        "username": "Kev",
        "email": "kev.morel.musician@hotmail.com",
        "friends": ["oscar"],
        "location": {
          "country": "England",
          "lat": 51.50735,
          "long": -0.12776
        },
        "__v": 0
      }
    ]
  },
  "GET /api/users/:username": {
    "description": "return an object containing a single user as selected from the provided username",
    "example response": {
      "user": {
        "_id": "673c75ec72ab525f841cafee",
        "username": "Kev",
        "email": "kev.morel.musician@hotmail.com",
        "friends": ["oscar"],
        "location": {
          "country": "England",
          "lat": 51.50735,
          "long": -0.12776
        },
        "__v": 0
      }
    }
  },
  "GET /api/letters/:letter_id": {
    "description": "return an object containing a letters data from provided letter ID",
    "example response": {
      "letter": {
        "_id": "673df0d268cbd2040894c65d",
        "sender": "sam",
        "recipient": "oscar",
        "content": {
          "letter": "https://upload.wikimedia.org/wikipedia/commons/a/af/Old_Letter.jpg"
        },
        "is_opened": false,
        "is_saved": false,
        "date_sent": "2024-11-20T14:23:14.684Z",
        "__v": 0
      }
    }
  },
  "POST /api/letters":{
    "description": "return an object containging the posted letter",
    "example response": {
      "letter": {
        "_id": "673df0d268cbd2040894c65d",
        "sender": "sam",
        "recipient": "oscar",
        "content": {
          "letter": "https://upload.wikimedia.org/wikipedia/commons/a/af/Old_Letter.jpg"
        },
        "is_opened": false,
        "is_saved": false,
        "date_sent": "2024-11-20T14:23:14.684Z",
        "__v": 0
      }
    }
  }
}
